<h1>Words</h1>
<ul>
  <% @new_letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @new_letters %>
  <input type="text" placeholder="Your word" name="word">
  <input type="submit">
</form>
